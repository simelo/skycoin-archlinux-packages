pkgname=skywire
_pkgname=skywire
pkgver=20190117.757_1a28b1f
pkgrel=1
pkgdesc="skywire node"
arch=('aarch64')
license=('GPL')
depends=(
)
makedepends=(
	'go'
	'git'
)

source=(
	"$_pkgname::git://github.com/skycoin/skywire.git#branch=${BRANCH:-master}"
)

md5sums=(
	'SKIP'
)

backup=(
)

pkgver() {
	if [[ "$PKGVER" ]]; then
		echo "$PKGVER"
		return
	fi

	cd "$srcdir/$_pkgname"
	local date=$(git log -1 --format="%cd" --date=short | sed s/-//g)
	local count=$(git rev-list --count HEAD)
	local commit=$(git rev-parse --short HEAD)
	echo "$date.${count}_$commit"
}

build() {
	cd "$srcdir/$_pkgname"

	if [ -L "$srcdir/$_pkgname" ]; then
		rm "$srcdir/$_pkgname" -rf
		mv "$srcdir/go/src/$_pkgname/" "$srcdir/$_pkgname"
	fi

	rm -rf "$srcdir/go/src"

	mkdir -p "$srcdir/go/src"

	export GOPATH="$srcdir/go"

	mv "$srcdir/$_pkgname" "$srcdir/go/src/"

	cd "$srcdir/go/src/$_pkgname/"
	ln -sf "$srcdir/go/src/$_pkgname/" "$srcdir/$_pkgname"

	echo ":: Updating git submodules"
	git submodule update --init

	echo ":: Building binary"
        cd "$srcdir/go/src/$_pkgname/cmd/manager/"
	go get -v \
		-gcflags "-trimpath $GOPATH/src"

        echo ":: Building binary"
        cd "$srcdir/go/src/$_pkgname/cmd/node"
        go get -v \
                -gcflags "-trimpath $GOPATH/src"

        echo ":: Building binary"
        cd "$srcdir/go/src/$_pkgname/cmd/socks/socksc"
        go get -v \
                -gcflags "-trimpath $GOPATH/src"

        echo ":: Building binary"
        cd "$srcdir/go/src/$_pkgname/cmd/socks/sockss"
        go get -v \
                -gcflags "-trimpath $GOPATH/src"

        echo ":: Building binary"
        cd "$srcdir/go/src/$_pkgname/cmd/ssh/sshc"
        go get -v \
                -gcflags "-trimpath $GOPATH/src"

        echo ":: Building binary"
        cd "$srcdir/go/src/$_pkgname/cmd/ssh/sshs"
        go get -v \
                -gcflags "-trimpath $GOPATH/src"
}

package() {
	find "$srcdir/go/bin/" -type f -executable | while read filename; do
		install -DT "$filename" "$pkgdir/usr/bin/$(basename $filename)"
	done
}
